<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_action_locker_search" model="ir.ui.view">
        <field name="name">action.locker.search</field>
        <field name="model">action.locker</field>
        <field name="arch" type="xml">
            <search>
                <field name="key" string="Locker key"/>
                <field name="expiry_date"/>

                <group string="Group by">
                    <filter string="User" name="create_uid" context="{'group_by': 'create_uid'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="view_action_locker_form" model="ir.ui.view">
        <field name="name">action.locker.form</field>
        <field name="model">action.locker</field>
        <field name="arch" type="xml">
            <form create="false" edit="false">
                <sheet>
                    <group>
                        <field name="key"/>
                        <field name="expiry_date"/>
                        <field name="create_uid"/>
                        <field name="create_date"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_action_locker_tree" model="ir.ui.view">
        <field name="name">action.locker.list</field>
        <field name="model">action.locker</field>
        <field name="arch" type="xml">
            <tree create="false" edit="false">
                <field name="key"/>
                <field name="expiry_date"/>
                <field name="create_date"/>
                <field name="create_uid"/>
            </tree>
        </field>
    </record>

    <record id="act_action_locker" model="ir.actions.act_window">
        <field name="name">Action Locker</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">action.locker</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_action_locker_main" name="Action locker"/>

    <menuitem id="menu_act_action_locker"
              parent="action_locker.menu_action_locker_main"
              sequence="10"
              action="action_locker.act_action_locker"/>

</odoo>
